<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guanghe.management.dao.WealthManagementDetailsDao">

    <sql id="limit">
        limit #{pageOffset}, #{pageSize}
    </sql>

    <select id="queryNewsInformationCount" resultType="int">
        SELECT COUNT(id) FROM gh_news_update_news_information
    </select>

    <select id="queryWealthManagementDetailsList" parameterType="map" resultType="com.guanghe.management.entity.bo.WealthManagementDetailsBO">
        SELECT * FROM gh_wealth_management_details WHERE 1 = 1
        <if test="type != null">
            AND type = #{type}
        </if>
        ORDER BY create_time DESC
        <include refid="limit"/>
    </select>

    <select id="queryWealthManagementDetailsById" parameterType="int" resultType="com.guanghe.management.entity.bo.WealthManagementDetailsBO">
        SELECT * FROM gh_wealth_management_details WHERE id = #{id}
    </select>

    <delete id="deleteWealthManagementbyId" parameterType="int">
        DELETE FROM gh_wealth_management_details WHERE id = #{id}
    </delete>

    <insert id="addWealthManagement" parameterType="com.guanghe.management.entity.bo.WealthManagementDetailsBO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO gh_wealth_management_details
          (title,sub_title,english_sub_title,synopsis,content,img_url,create_user,create_time)
          VALUES (#{title},#{subTitle},#{englishSubTitle},#{synopsis},#{content},#{imgUrl},#{createUser},NOW())

    </insert>

    <update id="updateWealthManagementbyId" parameterType="com.guanghe.management.entity.bo.WealthManagementDetailsBO">
        UPDATE gh_wealth_management_details  SET title = #{title},
        sub_title = #{subTitle},english_sub_title = #{englishSubTitle},synopsis = #{synopsis},
        content = #{content},img_url = #{imgUrl},create_user = #{createUser},
        update_time = NOW() WHERE id = #{id}
    </update>
</mapper>